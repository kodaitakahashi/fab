#!/usr/bin/env ruby

require 'fab/version'
require 'fab'
require 'thor'

module Fab
  #= Denrei CLI
  class CLI < Thor
    default_command :help
    
    desc "version","show version"
    def version
      p Fab::VERSION
    end
    
    desc "pref","Use fab  -p <Prefectures> or fab --pref <Prefectures>"
    def pref
    end

    desc "city" , "fab -c <city> or fab --city <city>"
    def city
    end
  end
end
Fab::CLI.start(ARGV)
