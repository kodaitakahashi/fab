#!/usr/bin/env ruby

require 'fab/version'
require 'fab'
require 'thor'

module Fab
  #= Denrei CLI
  class CLI < Thor
    default_command :help

    desc "registration" ,"APIKey registration"
    def registratin
    end

    option :pre,:type => :string ,:required => true 
    option :cit,:type => :string ,:required => true
    option :isb,:type=> :numeric ,:required => true
    desc "find","find book"
    def find()
      
    end
    desc "version","show version"
    def version
      p Fab::VERSION
    end
  end
end
Fab::CLI.start(ARGV)
