#!/usr/bin/env ruby
# -*- coding: utf-8-*-

require 'fab/version'
require 'fab'
require 'thor'

module Fab
  #= Denrei CLI
  class CLI < Thor
    default_command :help

    desc "registration" ,"APIKey registration"
    def registratin
    end

    option :pref,:type => :string ,:required => false , :defalt => nil , :aliases => "p"
    option :city,:type => :string ,:required => false , :defalt => nil , :aliases => "c"
    option :isbn,:type=> :numeric ,:required => true  , :aliases => "i"
    desc "find","find book"
    def find()
      puts "isbn&pref&city" if options[:isbn] and options[:pref].nil? and options[:city].nil?
      exit
      puts "isbn&pref" if options[:isbn] and options[:pref]
      exit
      puts "isbn&city" if options[:isbn] and options[:city].nil?
      #      Fab::pref.new.add if options[:isbn] and options[:pref]
      puts "isbn" if options[:isbn]
      exit
      #     Fab::Isbn.new.add if options[:isbn]
    end
    
    desc "version","show version"
    def version
      p Fab::VERSION
    end
  end
end
Fab::CLI.start(ARGV)
