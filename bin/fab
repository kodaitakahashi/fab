#!/usr/bin/env ruby
# -*- coding: utf-8-*-

require 'fab/version'
require 'fab'
require 'thor'

module Fab
  #= Denrei CLI
  class CLI < Thor
    default_command :help

    desc "registration" ,"APIKey registration"
    def registratin
    end

    option :pref,:type => :string ,:required => true , :defalt => nil , :aliases => "p"
    option :city,:type => :string ,:required => true , :defalt => nil , :aliases => "c"l
    option :isbn,:type=> :numeric ,:required => true  , :aliases => "i"
    desc "find","find book"
    def find()
       
    end
    
    desc "version","show version"
    def version
      p Fab::VERSION
    end
  end
end
Fab::CLI.start(ARGV)
